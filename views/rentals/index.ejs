<%- include('../partials/header') %>

<h1>Rental view</h1>
<div class="rental-view">
  <div>
    <h3>Choose a car to rent</h3>

    <div class="cars">
      <% rentals.forEach(function(r){ %> <% if(r.user.id.valueOf() !== user.id)
      { %>
      <a href="/rentals/<%=r.id%>">
        <div>
        <div class="car-card">
          <img src="/images/tesla.jpeg" alt="" />
          <div>
            <p><%=r.make%></p>
            <p><%=r.model%></p>
          </div>
        </div>
        
        
      </a>
      <button><i class="fa-solid fa-heart" style="color: #1b3b6f"></i> Add to Favourites</button>
    </div>

      <% } %> <%})%>
    </div>
  </div>

  <div class="my-requests">
    <h3>My requests</h3>
    <% requests.forEach(function(r){ %> <% if(user.id===r.userId){ %>
    <div class="car-card">
      <div class="car-img">
        <img src="/images/tesla.jpeg" alt="" />
      </div>
      <div>
        <p><%=r.car.make%></p>
        <p><%=r.car.model%></p>
      </div>
    </div>
    <% } %> <%})%>
  </div>
</div>

<%- include('../partials/footer') %>
